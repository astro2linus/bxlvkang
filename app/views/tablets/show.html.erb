<div class="layout--about">

  <div class="backdrop">
    <div class="image-container">
        <div class="image" style="background-image: url(<%= @tablet.image_url %>);"></div>
 
    </div>
    <div class="nav--about">
      <div>
        <nav>
          <ul>
            <% @tablets.each do |t| %>
              <li><%= link_to t.headline, tablet_path(t), :class => "is-active" %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <div class="contain">
    <div class="content">

      <div class="section">
        <h2><%= @tablet.try(:headline) %></h2>
        <div class="copy--body">
          <%= raw @tablet.try(:long_description) %>
        </div>
      </div>
    </div>

  </div>
</div>
